@page
@model AdminApp.Pages.ViewItemsModel
@{
    ViewData["Title"] = "ViewItems";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<div class="container row">

    <div class="col-9">
        <h2 class="text-info">Items in store</h2>
    </div>

    <div class="col-3">
        <a asp-page="AddItem" class="btn btn-info form-control text-white">Add Item</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        @if (Model.Items.Count() > 0)
        {
            <table class="table table-striped table-success border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Items.FirstOrDefault().ItemName">Name</label>
                    </th>

                    <th>
                        <label asp-for="Items.FirstOrDefault().QuantityAdded">Number in stock</label>
                    </th>
                </tr>

                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <a asp-route-id="@item.Id">@Html.DisplayFor(m => item.ItemName)</a>
                        </td>

                        <td>
                            <button class="glyphicon glyphicon-plus text-danger" asp-route-id="@item.Id">-</button>
                            @Html.DisplayFor(m => item.QuantityAdded)
                            <button class="glyphicon glyphicon-minus text-success" asp-route-id="@item.Id">+</button>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>You have not added any items</p>
        }
    </div>
</div>

