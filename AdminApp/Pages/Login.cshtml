@page
@model AdminApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<div class="text-center container">
    <h1 class="display-3">Welcome</h1>
    <span class="text-center">Login to continue</span>

    <div class="container w-50 border border-success rounded form-group">
        <form method="post">
            <div class="form-group">
                <label for="usr-name" asp-for="@Model.SomeUser.eMail">Enter your email</label>
                <input type="email" id="usr-name" asp-for="@Model.SomeUser.eMail" class="form-control" required />

                <label for="pwd" asp-for="@Model.SomeUser.Pswd">Enter your password</label>
                <input type="password" id="pwd" asp-for="@Model.SomeUser.Pswd" class="form-control mb-2" required />

                <input type="submit" class="btn btn-primary text-white" value="Login" />
            </div>
        </form>
    </div>
</div>

