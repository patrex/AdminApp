@page
@model AdminApp.Pages.UpdateItemModel
@{
    ViewData["Title"] = "UpdateItem";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<div class="container row">

    <div class="col-9">
        <h2 class="text-info">Update info for @Model.Item.ItemName</h2>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="Item.ItemName">Item name</label>
                </div>
                <div class="col-6 mb-2">
                    <input asp-for="Item.ItemName" class="form-control" />
                </div>
                <span asp-validation-for="Item.ItemName" class="text-danger"></span>

                <div class="col-4">
                    <label asp-for="Item.QuantityAdded">Quantity</label>
                </div>
                <div class="col-6 mb-2 ">
                    <input asp-for="Item.QuantityAdded" class="form-control" type="number" />
                </div>
                <span asp-validation-for="Item.QuantityAdded" class="text-danger"></span>

                <div class="row container mx-auto w-50">
                    <input class="btn btn-primary text-white mr-2" type="submit" value="Update" />
                </div>

            </div>

        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

