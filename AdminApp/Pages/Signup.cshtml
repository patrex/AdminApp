@page
@model AdminApp.Pages.SignupModel
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Signup</h1>

<br />
<h2 class="text-info">Enter details for the user</h2>

<br />

<div class="container border" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group col p-2">
            <div class="col-2">
                <label asp-for="SomeUser.Firstname">First name</label>
            </div>
            <div class="col-6 mb-2">
                <input asp-for="SomeUser.Firstname" class="form-control" />
            </div>
            <span asp-validation-for="SomeUser.Firstname" class="text-danger"></span>

            <div class="col-2">
                <label asp-for="SomeUser.Lastname">Last name</label>
            </div>
            <div class="col-6 mb-2 ">
                <input asp-for="SomeUser.Lastname" class="form-control" />
            </div>
            <span asp-validation-for="SomeUser.Lastname" class="text-danger"></span>

            <div class="col-2">
                <label asp-for="SomeUser.eMail">Email</label>
            </div>
            <div class="col-6 mb-2 ">
                <input asp-for="SomeUser.eMail" class="form-control" />
            </div>
            <span asp-validation-for="SomeUser.eMail" class="text-danger"></span>

            <div class="col-2">
                <label asp-for="SomeUser.Department">Department</label>
            </div>
            <div class="col-6 mb-2 ">
                <input asp-for="SomeUser.Department" class="form-control" />
            </div>
            <span asp-validation-for="SomeUser.Department" class="text-danger"></span>

            <div class="col-2">
                <label asp-for="SomeUser.Password">Password</label>
            </div>
            <div class="col-6 mb-2 ">
                <input asp-for="SomeUser.Password" class="form-control" type="password" />
            </div>
            <span asp-validation-for="SomeUser.Password" class="text-danger"></span>

            <div class="row container mx-auto w-50">
                <input class="btn btn-primary text-white mr-2" type="submit" value="Sign up" />
                <a asp-page="Index" class="btn btn-danger text-white">Discard</a>
            </div>

            <div class="form-group">
                Already have an account? <a class="text-info" asp-page="Login">Sign in</a> instead
            </div>

        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}

