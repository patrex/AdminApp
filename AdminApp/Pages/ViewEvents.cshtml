@page
@model AdminApp.ViewEventsModel
@{
    ViewData["Title"] = "ViewEvents";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<div class="container row">

    <div class="col-9">
        <h2 class="text-info">Events</h2>
    </div>

    <div class="col-3">
        <a asp-page="CreateEvent" class="btn btn-info form-control text-white">Create Event</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        @if (Model.Events.Count() > 0)
        {
            <table class="table table-striped table-success border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Events.FirstOrDefault().Name">Event name</label>
                    </th>

                    <th>
                        <label asp-for="Events.FirstOrDefault().EventDateTime">Event Date/Time</label>
                    </th>

                    <th>
                        <label asp-for="Events.FirstOrDefault().Venue" class="border-right">Event Venue</label>
                    </th>

                    <th>
                        <label>Actions</label>
                    </th>
                </tr>

               @foreach(var someEvent in Model.Events){
                    <tr>
                        <td>
                            <a asp-page="AddParticipant" asp-route-id="@someEvent.Id">@Html.DisplayFor(m => someEvent.Name)</a> 
                        </td>

                        <td>
                            @Html.DisplayFor(m => someEvent.EventDateTime)
                        </td>

                        <td>
                            @Html.DisplayFor(m => someEvent.Venue)
                        </td>

                        <td>
                            <a asp-page="EditEvent" class="btn btn-success text-white" asp-route-id="@someEvent.Id">Edit</a>
                            <button onclick="return confirm('Do you want to permanently remove this event log?')" asp-page-handler="Delete" asp-route-id="@someEvent.Id" class="btn btn-danger text-white">Delete</button>
                        </td>
                    </tr>
               }

            </table>
        }
        else
        {
            <p>You have not created any events</p>
        }
    </div>
   
   

</div>

